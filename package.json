{
    "name": "stml",
    "displayName": "STML",
    "description": "Support for STML documents.",
    "version": "0.0.2",
    "publisher": "NobleRobot",
    "author": {
        "name": "Mark LaCroix"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters"
    ],
    "preview": true,
    "contributes": {
        "languages": [
            {
                "id": "stml",
                "aliases": [
                    "STML",
                    "STM",
                    "stml",
                    "stm"
                ],
                "extensions": [
                    ".stm",
                    ".stml"
                ],
                "mimetypes": [
                    "text/stml"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "stml",
                "scopeName": "source.stml",
                "path": "./syntaxes/stml.tmLanguage.json",
                "tokenTypes": {
                    "meta.tag string.quoted": "other"
                }
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/NobleRobot/vscode-stml.git"
    }
}
